{
	"name": "caboose",
	"description": "RED Interactive's internal SASS + Compass framework",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/ff0000/caboose.git"
	},
	"dependencies": {
		"grunt-compass": "0.2.x"
	},
	"systemDependencies": {
		"ruby": ">= 1.8.7",
		"gem": ">= 1.3.6",
		"bundle": ">= 1.2.0"
	},
	"scripts": {
		"install" : "node config/init/caboose.js",
		"initialize" : "node config/init/caboose.js"
	},
	"config": {
		"scope": "resources/compass",
		"replaceVars": false,
		"localFiles": "defaults",
		"requiredPaths": [
			".bundle",
			"resources/compass/gems"
		],
		"excludedPaths": [
			"resources/compass/gems"
		]
	}
}
