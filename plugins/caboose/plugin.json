{
	"name": "caboose",
	"description": "RED Interactive's internal Sass + Compass framework",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/ff0000/caboose.git"
	},
	"dependencies": {
		"pulverizr": "~0.7.x"
	},
	"systemDependencies": {
		"ruby": {
			"version": ">= 1.8.7",
			"install": "https://gist.github.com/3900651",
			"upgrade": "brew update && brew upgrade rbenv"
		},
		"gem": ">= 1.3.6",
		"bundle": {
			"version": ">= 1.2.0",
			"install": "gem install bundler",
			"upgrade": "gem update bundler"
		},
		"gifsicle": {
			"version": ">= 1.58.0",
			"install": "brew install gifsicle",
			"upgrade": "brew update && brew upgrade gifsicle"
		},
		"jpegtran": {
			"version": "*",
			"install": "brew install libjpeg",
			"upgrade": "brew update && brew upgrade libjpeg"
		},
		"optipng": {
			"version": ">= 0.6.3",
			"install": "brew install optipng",
			"upgrade": "brew update && brew upgrade optipng"
		},
		"pngcrush": {
			"version": ">= 1.7.0",
			"install": "brew install pngcrush",
			"upgrade": "brew update && brew upgrade pngcrush"
		}
	},
	"scripts": {
		"install" : "./config/init/caboose.js",
		"update" : "./config/init/caboose.js"
	},
	"config": {
		"scope": "project/source",
		"replaceVars": false,
		"requiredPaths": [
			".bundle",
			"Gemfile",
			"Gemfile.lock"
		],
		"excludedPaths": [
			".bundle",
			".sass-cache"
		]
	}
}
